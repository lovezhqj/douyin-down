{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "outDir": "dist-server",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": false,
        "isolatedModules": true
    },
    "include": [
        "server.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src"
    ]
}